{% assign grid_block_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .grid-block-{{ grid_block_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    width: 100%;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 749px) {
    .grid-block-{{ grid_block_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .grid-item-{{ grid_block_id }} {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .grid-item-{{ grid_block_id }}:hover {
    transform: translateY(-4px);
  }

  .grid-item-image-wrapper-{{ grid_block_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}px;
    background-color: #f4f4f4;
  }

  .grid-item-image-{{ grid_block_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .grid-item-image-wrapper-{{ grid_block_id }} svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .grid-item-title-{{ grid_block_id }} {
    margin-top: {{ section.settings.title_spacing }}px;
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }} !important;
    font-family: var(--font-body-family) !important;
    letter-spacing: normal;
    color: {{ section.settings.title_color }};
    text-align: {{ section.settings.text_alignment }};
    text-transform: capitalize !important;
    padding: 0px 20px;
  }

  @media screen and (max-width: 749px) {
    .grid-item-title-{{ grid_block_id }} {
      font-size: 16px !important;
    }

    .grid-block-{{ grid_block_id }} {
      gap: 15px;
    }
  }

  @media screen and (max-width: 450px) {
    .grid-item-title-{{ grid_block_id }} {
      font-size: 14px !important;
    }


  }
{% endstyle %}

<div class="grid-block-{{ grid_block_id }} page-width">
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      {% assign item_image = block.settings.image %}
      {% assign item_title = block.settings.title %}
      {% assign item_url = block.settings.url %}

      {% if item_image != blank or item_title != blank %}
        <a
          href="{{ item_url | default: '#' }}"
          class="grid-item-{{ grid_block_id }}"
          {% if item_url == blank %}aria-disabled="true"{% endif %}
          {{ block.shopify_attributes }}
        >
          <div class="grid-item-image-wrapper-{{ grid_block_id }}">
            {% if item_image != blank %}
              <img
                src="{{ item_image | image_url: width: 600 }}"
                alt="{{ item_image.alt | escape }}"
                loading="lazy"
                width="{{ item_image.width }}"
                height="{{ item_image.height }}"
                class="grid-item-image-{{ grid_block_id }}"
              >
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
          </div>

          {% if item_title != blank %}
            <h3 class="grid-item-title-{{ grid_block_id }}">{{ item_title }}</h3>
          {% endif %}
        </a>
      {% endif %}
    {% endfor %}
  {% else %}
    <!-- Optional: simple placeholder when no blocks exist -->
    <div class="grid-item-{{ grid_block_id }}" aria-disabled="true">
      <div class="grid-item-image-wrapper-{{ grid_block_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
      <h3 class="grid-item-title-{{ grid_block_id }}">Add grid items in the editor</h3>
    </div>
  {% endif %}
</div>

